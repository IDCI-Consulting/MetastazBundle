{% form_theme form 'MetastazTemplateBundle:Form:fields.html.twig' %}

<form action="{{ action_url }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <ul class="actions">
        <li>
            <button type="submit">
                {% if(action == 'create') %}
                    Create
                {% else %}
                    Update
                {% endif %}
            </button>
        </li>
        {% if(action == 'create') %}
        <li><a href="{{ path('metastaz_product') }}">Cancel</a></li>
        {% endif %}
    </ul>
</form>
