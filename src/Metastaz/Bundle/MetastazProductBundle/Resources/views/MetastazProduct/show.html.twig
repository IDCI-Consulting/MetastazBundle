{% extends 'MetastazProductBundle::product.html.twig' %}

{% block content %}

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>
        <tr>
            <th>Shortdescription</th>                <td>{{ entity.shortDescription }}</td>        </tr>
        <tr>
            <th>Longdescription</th>                <td>{{ entity.longDescription }}</td>        </tr>
        {% for namespace, keys in entity.getAllMetastaz() %}
            <tr><th colspan="2">{{ namespace }}</th></tr>
            {% for key, value in keys %}
                <tr>
                    <th>
                        {{ key }}
                        {% if key in indexes[namespace] %}
                            (indexed)
                        {% endif %}
                    </th>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul class="actions">
    <li>
        <a class="back" href="{{ path('metastaz_product') }}">
            <span>Back to the list</span>
        </a>
    </li>
    <li>
        <a class="edit" href="{{ path('metastaz_product_edit', { 'id': entity.id }) }}">
            <span>Edit</span>
        </a>
    </li>
    <li>
        <form action="{{ path('metastaz_product_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

