{% extends 'MetastazProductBundle::product.html.twig' %}

{% block main %}
<h1>MetastazProduct edit</h1>

<form action="{{ path('metastaz_product_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('metastaz_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('metastaz_product_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
