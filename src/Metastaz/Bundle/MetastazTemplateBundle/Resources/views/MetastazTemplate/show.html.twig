{% extends 'MetastazTemplateBundle::template.html.twig' %}

{% block body %}

<table class="list">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Name</th>                <td>{{ entity.name }}</td>        </tr>

        {% for field in entity.getMetastazFields() %}
        <tr>
            <th>{{ field.metaNamespace }} - {{ field.metaKey }}</th>
            <td>{{ field.getMetastazFieldType() }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<hr />

<ul class="actions">
    <li>
        <a class="back" href="{{ path('metastaz_template') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="edit" href="{{ path('metastaz_template_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('metastaz_template_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
