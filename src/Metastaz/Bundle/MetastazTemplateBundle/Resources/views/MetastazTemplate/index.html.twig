{% extends 'MetastazTemplateBundle::template.html.twig' %}

{% block javascripts %}
{{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/metastaztemplate/js/ajaxify_metastaz_template.js') }}"></script>
{% endblock %}

{% block content %}
<table class="list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('metastaz_template_edit', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a class="action edit" href="{{ path('metastaz_template_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="form_container">
</div>

<hr />

<ul class="actions">
    <li>
        <a class="new create_link" href="{{ path('metastaz_template_new') }}">
            <span>Create a new template</span>
        </a>
    </li>
</ul>
{% endblock %}
